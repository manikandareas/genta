GENTA_PRIMARY.ENV="local"

GENTA_SERVER.PORT="8080"
GENTA_SERVER.READ_TIMEOUT="30"
GENTA_SERVER.WRITE_TIMEOUT="30"
GENTA_SERVER.IDLE_TIMEOUT="60"
GENTA_SERVER.CORS_ALLOWED_ORIGINS="http://localhost:3000"

GENTA_DATABASE.HOST="localhost"
GENTA_DATABASE.PORT="5432"
GENTA_DATABASE.USER="postgres"
GENTA_DATABASE.PASSWORD="postgres"
GENTA_DATABASE.NAME="genta"
GENTA_DATABASE.SSL_MODE="disable"
GENTA_DATABASE.MAX_OPEN_CONNS="25"
GENTA_DATABASE.MAX_IDLE_CONNS="25"
GENTA_DATABASE.CONN_MAX_LIFETIME="300"
GENTA_DATABASE.CONN_MAX_IDLE_TIME="300"

GENTA_AUTH.SECRET_KEY="secret"

GENTA_INTEGRATION.RESEND_API_KEY="resend_key"

GENTA_REDIS.ADDRESS="redis://localhost:6379"

# ============================================================================
# OBSERVABILITY CONFIGURATION
# ============================================================================

# Service Identity
GENTA_OBSERVABILITY.SERVICE_NAME="genta"
GENTA_OBSERVABILITY.ENVIRONMENT="development"

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Basic Logging Settings
GENTA_OBSERVABILITY.LOGGING.LEVEL="debug"
GENTA_OBSERVABILITY.LOGGING.FORMAT="console"
GENTA_OBSERVABILITY.LOGGING.SLOW_QUERY_THRESHOLD="100ms"

# ============================================================================
# NEW RELIC CONFIGURATION
# ============================================================================

# New Relic APM
GENTA_OBSERVABILITY.NEW_RELIC.LICENSE_KEY="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
GENTA_OBSERVABILITY.NEW_RELIC.APP_LOG_FORWARDING_ENABLED="true"
GENTA_OBSERVABILITY.NEW_RELIC.DISTRIBUTED_TRACING_ENABLED="true"
GENTA_OBSERVABILITY.NEW_RELIC.DEBUG_LOGGING="false"

# ============================================================================
# HEALTH CHECKS CONFIGURATION
# ============================================================================

# Health Check Settings
GENTA_OBSERVABILITY.HEALTH_CHECKS.ENABLED="true"
GENTA_OBSERVABILITY.HEALTH_CHECKS.INTERVAL="30s"
GENTA_OBSERVABILITY.HEALTH_CHECKS.TIMEOUT="5s"
GENTA_OBSERVABILITY.HEALTH_CHECKS.CHECKS="database,redis"
